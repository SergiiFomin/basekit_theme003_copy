{% extends "layout.twig" %}

{% block content %}

<div class="bg-glow">

    <!--header-->
    <header>
        <div class="header">
            <div class="container">
                <div class=row>
                    <article class="span3">
                        <h1 class="brand">{{widget('companyname', 'companyname', {"business": "profile"})|raw}}</h1>
                    </article>
                    <article class="span9">
                        <div class="nav-collapse nav-collapse_ collapse">
                            {{widget('extendednavigation', 'navigationheader', {})|raw}}
                        </div>
                    </article>
                </div>
            </div>
        </div>
    </header>

    <div class="global">

        <!--content-->

        <section>
            <div class="container">
                <div class="row">
                    <article class="span12">                     
                        
                        {{zone('main')|raw}}

                    </article>
                </div>

            </div>

        </section>

    </div>

    <!--footer-->
    <footer>
        <div class="container">
            <div class="row">
                <section class="span12">
                    <div class="row">
                        <div class="responsivecolumns columns-four-25-25-25-25">
                            <div class="column columns-four-first">
                                <h1 class="brand">{{widget('companyname', 'companyname', {"business": "profile"})|raw}}</h1>
                            </div>
                            <div class="column columns-four-second">
                                {{widget('profile', 'footer2footercolumn2profilesocialicons', { 'profileType':'email', 'email':'profile'})|raw}}
                                {{widget('profile', 'footer2footercolumn2profilesocialicons', { 'profileType':'phone', 'phone':'profile'})|raw}}
                            </div>
                            <div class="column columns-four-third">
                                {{widget('profile', 'footer2footercolumn2profilesocialicons', { 'profileType':'address', 'address':'profile'})|raw}}
                            </div>
                            <div class="column columns-four-fourth">
                                {{widget('profile', 'footer2footercolumn2profilesocialicons', { 'profileType':'socialicons', 'socialicons':'profile'})|raw}}
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </footer>
    
</div>

{% endblock %}